<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ming.youdianmusic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".musicPlay_model.MusicListActivity" />
        <activity android:name=".musicPlay_model.MusicPlayerActivity" />

        <service android:name=".musicPlay_model.MusicService" />

        <activity android:name=".musicSearch_model.SearchActivity" />
        <activity android:name=".musicDownload_model.DownLoadActivity"></activity>
        <activity android:name=".login_model.LoginActivity"></activity>
        <activity android:name=".register_model.RegisterActivity"></activity>
    </application>

</manifest>